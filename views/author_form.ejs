<div class="author-form">
  <h1><%= title %></h1>

  <form method="POST" action="">
    <div class="form-group">
      <label for="first_name">First Name:</label>
      <input autofocus id="first_name" name="first_name" type="text" value='<%= author.first_name %>'>

      <label for="last_name">Last Name:</label>
      <input id="last_name" name="last_name" type="text" value='<%= author.family_name %>'>

      <label for="date_of_birth">Date of Birth:</label>
      <input id="date_of_birth" name="date_of_birth" type="date" value='<%= author.date_of_birth %>' placeholder="mm/dd/yyyy">

      <label for="date_of_death">Date of Death (Leave blank if still alive):</label>
      <input id="date_of_death" name="date_of_death" type="date" value='<%= author.date_of_death %>' placeholder="mm/dd/yyyy">

      <button type="submit">Submit</button>
    </div>
  </form>

  <% if (errors) { %>
    <ul class="form-errors">
      <h4 class="text-danger">Errors:</h4>
      <% errors.forEach(error => { %>
        <li>- <%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</div>