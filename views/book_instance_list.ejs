<div class="book-instance-list">
  <h1><%= title %></h1>
  <% if (book_instance_list.length > 0) { %>
    <ul>
      <% book_instance_list.forEach(instance => { %>
        <li>
          <a href=<%= instance.url %>><%= instance.book.title %> : <%= instance.imprint %></a>
          <% if (instance.status === "Available") { %>
            - <span class="text-success"><%= instance.status %></span>
          <% } else if (instance.status === "Maintenance") { %>
            - <span class="text-danger"><%= instance.status %></span>
          <% } else { %>
            - <span class="text-warning"><%= instance.status %></span>
          <% } %>
          <% if (instance.status !== "Available") { %>
            <span>- (Due: <%= instance.formattedDueDate %>)</span>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>There are no book copies in the library</p>
  <% } %>
</div>